datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Restaurant {
  id      Int      @id @default(autoincrement())
  name    String
  reviews Review[]
}

model Review {
  id             Int        @id @default(autoincrement())
  restaurantId   Int
  restaurant     Restaurant @relation(fields: [restaurantId], references: [id])
  foodRating     Int
  serviceRating  Int
  ambienceRating Int
  comments       String?
  createdAt      DateTime   @default(now())
}